{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "outDir": "./dist",
    "rootDir": "./src", // CRITICAL: Assuming all source files are here
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowJs": true,
    "sourceMap": true
  },
  "include": ["src/**/*.ts"], // Only include TS files inside src/
  "exclude": ["node_modules", "dist"]
}
