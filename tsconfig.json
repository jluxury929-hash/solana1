{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    // This setting tells TypeScript to check external libraries for type errors. 
    // Setting it to true can suppress TS2307 errors from broken libraries 
    // but should be used cautiously.
  },
  "include": ["src/**/*"]
}
