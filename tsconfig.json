{
  "compilerOptions": {
    "module": "CommonJS", // FIX 2: Use CommonJS module system
    "moduleResolution": "Node", // FIX 2: Use stable Node resolution
    "target": "ES2022",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true, 
    "allowJs": true,
    "sourceMap": true
  },
  "include": ["**/*.ts"], 
  "exclude": ["node_modules", "dist"]
}
