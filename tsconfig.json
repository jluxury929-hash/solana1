{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "outDir": "./dist",
    "rootDir": "./", // FIX: Change rootDir from "./src" back to "./"
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true, 
    "allowJs": true,
    "sourceMap": true
  },
  "include": ["**/*.ts"], // FIX: Look for all .ts files in all directories
  "exclude": ["node_modules", "dist"]
}
