{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    
    "outDir": "./dist",
    "rootDir": "./",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    
    // CRITICAL FIX: BaseUrl and Paths to force-resolve stubborn external packages
    "baseUrl": ".", 
    "paths": {
      // These are crucial for fixing TS2307 for external EVM modules
      "ethers": ["./node_modules/ethers/lib/index.d.ts"],
      "@flashbots/ethers-provider-bundle": ["./node_modules/@flashbots/ethers-provider-bundle/dist/index.d.ts"]
    }
  },
  "include": ["**/*.ts"], 
  "exclude": ["node_modules", "dist"] 
}
