{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "outDir": "./dist",
    "rootDir": "./", // FIX: Use the container root as the source root
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true, 
    "allowJs": true,
    "sourceMap": true
  },
  // FIX: Look in all subdirectories, including src/
  "include": ["**/*.ts"], 
  "exclude": ["node_modules", "dist"]
}
