{
  "compilerOptions": {
    "module": "CommonJS", // FIX: Use CommonJS, which simplifies module resolution
    "moduleResolution": "Node", // FIX: Use stable Node resolution
    "target": "ES2022",
    "outDir": "./dist",
    "rootDir": "./src", // FIX: Essential for a project with files in 'src/'
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true, 
    "allowJs": true,
    "sourceMap": false
  },
  "include": ["src/**/*.ts"], 
  "exclude": ["node_modules", "dist"]
}
