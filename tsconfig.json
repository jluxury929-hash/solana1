{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node", 
    "target": "ES2022",
    "outDir": "./dist",
    "rootDir": ".", // CHANGE: Set rootDir to the current directory (/)
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true, 
    "allowJs": true,
    "sourceMap": false
  },
  "include": ["src/**/*.ts"], // Keep this to only compile files in src/
  "exclude": ["node_modules", "dist"]
}
