{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "outDir": "./dist",
    "rootDir": "./src", // CRITICAL FIX: Tells TSC where the source code starts
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true, 
    "allowJs": true,
    "sourceMap": true
  },
  "include": ["src/**/*.ts"], // CRITICAL FIX: Only include .ts files inside src/
  "exclude": ["node_modules", "dist"]
}
