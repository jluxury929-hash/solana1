// tsconfig.json (Simplified and Cleaned)
{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext", // This should handle external packages
    "target": "ES2022",
    "outDir": "./dist",
    "rootDir": "./",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    // Removed 'paths' which were causing conflicts
    "forceConsistentCasingInFileNames": true 
  },
  "include": ["**/*.ts"], 
  "exclude": ["node_modules", "dist"] 
}
