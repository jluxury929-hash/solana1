{
  "compilerOptions": {
    "module": "CommonJS", // Use CommonJS module system
    "moduleResolution": "Node", // Use stable Node resolution (works well with CommonJS)
    "target": "ES2022",
    "outDir": "./dist",
    "rootDir": "./src", // FIX: Sets the source root to the src folder
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true, 
    "allowJs": true,
    "sourceMap": false
  },
  "include": ["src/**/*.ts"], // Includes files within the src folder
  "exclude": ["node_modules", "dist"]
}
