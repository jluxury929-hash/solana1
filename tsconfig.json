{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "outDir": "./dist",
    "rootDir": "./",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    // Allows TypeScript to resolve imports from './src/file.js' correctly even though the file is .ts
    "allowJs": true
  },
  // We assume all files are in the root context, so we include everything.
  "include": ["**/*.ts", "**/*.js"], 
  "exclude": ["node_modules", "dist"] 
}
