{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext", 
    "target": "ES2022",
    "outDir": "./dist",
    "rootDir": "./",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true, // Critical for bypassing issues with installed types like 'ethers'
    "allowJs": true,
    "forceConsistentCasingInFileNames": true 
  },
  "include": ["**/*.ts"], 
  "exclude": ["node_modules", "dist"] 
}
